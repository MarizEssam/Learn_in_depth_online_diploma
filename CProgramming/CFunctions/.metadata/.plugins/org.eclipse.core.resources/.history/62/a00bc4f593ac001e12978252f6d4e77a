#include <stdio.h>

int factorial(int n){
	int f = 1;
	if (n==1 || n==0) {
		return factorial;

	}
	else{
		f = f *n;
		factorial(n-1);
	}
}


int main()
{
	int n;
	printf("Enter a number");
	scanf("%d", &n);
	printf("%d" ,factorial(n));
	return 0;
}

