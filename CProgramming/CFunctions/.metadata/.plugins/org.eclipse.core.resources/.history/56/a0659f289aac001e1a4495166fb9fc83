#include<stdio.h>
#include<stdlib.h>
void reverse();

int main(){
	printf("Enter a sentence");
	fflush(stdin);
	fflush(stdout);
	reverse();
	return 0;
}

void reverse(){
	char c;
	scanf("%c",&c);
	if (c!= '\0') {
		reverse();
		printf("%c",c);
	}
}
